<Page x:Class="ZachetAcademyApp.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZachetAcademyApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Главное окно">

    <Grid>

        <StackPanel Style="{StaticResource StpCenter}">

            <StackPanel Orientation="Vertical">

                <Button Style="{StaticResource BtnDefault}" Name="Btn_AddStudent" Content="Добавить студента" Click="Btn_AddStudent_Click"/>
                <Button Style="{StaticResource BtnDefault}" Name="Btn_AddEvaluation" Content="Добавить оценку" Click="Btn_AddEvaluation_Click" Margin="0 10 0 0"/>
                <Button Style="{StaticResource BtnDefault}" Name="Btn_ListStudent" Content="Список студентов" Click="Btn_ListStudent_Click" Margin="0 10 0 0"/>

            </StackPanel>
            
        </StackPanel>

        <Button Style="{StaticResource BtnDefault}" Name="Btn_Close" Content="Закрыть" Click="Btn_Close_Click" Margin="0 0 10 10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="90px"/>

    </Grid>


</Page>
